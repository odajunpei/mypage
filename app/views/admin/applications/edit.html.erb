<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="mt-3 pb-3">アプリ情報編集</h2>

      <%= form_with model: @application, url:admin_application_path(@application), method: :patch, local:true do |f| %>
      <table class="table table-borderless mt-5 ">
        <tbody>
          <tr>
            <td><%= f.label :image, "アプリ写真" %></td>
            <td><%= f.attachment_field :image, size:"200x200" %></td>
          </tr>
          <tr>
            <td><%= f.label :name, "タイトル" %></td>
            <td><%= f.text_field :name, size:"50", required: true %></td>
          </tr>
          <tr>
            <td><%= f.label :introduction %></td>
            <td><%= f.text_area :introduction, size:"53", required: true %></td>
          </tr>
          <tr>
            <td><%= f.label :url %></td>
            <td><%= f.text_field :url %></td>
          </tr>
          <tr>
            <td><%= f.label :giturl, "githubのurl" %></td>
            <td><%= f.text_field :giturl, required: true %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更内容を保存", class: "btn btn-primary"  %></td>
          </tr>
      </tbody>
    </table>
    <% end %>
    </div>
  </div>
</div>