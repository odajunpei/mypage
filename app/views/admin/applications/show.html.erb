<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-xs-12">
      <h2 class="mt-3 pb-3">アプリ詳細</h2>
        <%= link_to admin_application_path(@application), method: :delete, remote: true, class: "text-danger" do %>
          <h2>削除する</h2>
      <% end %>
      <table class="mt-5 table table-borderless">
        <tbody>
          <tr>
            <th>写真</th>
          </tr>
          <tr>
            <td>
              <%= attachment_image_tag @application, :image, class:"appliimage" %>
            </td>
          </tr>
          <tr>
            <th>タイトル</th>
          </tr>
          <tr>
            <td><%= @application.name %></td>
          </tr>
          <tr>
            <th>アプリ説明</th>
          </tr>
          <tr>
            <td class= "text-break"><%= @application.introduction %></td>
          </tr>
          <tr>
            <th>url</th>
          </tr>
            <td><%= @application.url %></td>
          </tr>
          <tr>
            <th>githubのurl</th>
          </tr>
          <tr>
            <td>
              <%= @application.giturl %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="text-right"><%= link_to "編集する", edit_admin_application_path(@application), class:"btn btn-primary" %></div>
    </div>
  </div>
</div>