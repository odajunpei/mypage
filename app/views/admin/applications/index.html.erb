<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2 col-xs-12">
      <div class="d-flex justify-content-between">
        <h2 class="mt-3 pb-4">商品一覧</h2>
        <h4 class="mt-4">
          <%= link_to "新規登録", new_admin_application_path %>
        </h4>
      </div>
      <% if @applications.present? %>
      <% @applications.each do |application| %>
      <div class="card w-40 text-center">
        <h1 class="text-center"><%= link_to admin_application_path(application) do %><%= application.name %><% end %></h1>
        <div class="card-image-top text-center">
          <%= attachment_image_tag application, :image, format: 'jpeg', class: "iimage" %>
        </div>
      </div>
      <% end %>
      <% else %>
        <h3 class="text-danger">・表示する内容はありません。</h3>
      <% end %>
   </div>
  </div>
 </div>