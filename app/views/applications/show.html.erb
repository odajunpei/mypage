<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="mt-3 pb-3">アプリ詳細</h2>

      <table class="mt-5 table table-borderless">
        <tbody>
          <tr>
            <th>写真</th>
            <td>
              <%= attachment_image_tag @application, :image, size:"200x200" %>
            </td>
          </tr>
          <tr></tr>
            <th>タイトル</th>
            <td><%= @application.name %></td>
          </tr>
          <tr>
            <th>アプリ説明</th>
            <td class= "text-break"><%= @application.introduction %></td>
          </tr>
          <tr>
            <th>url</th>
            <td><%= @application.url %></td>
          </tr>
          <tr>
            <th>githubのurl</th>
            <td>
              <%= @application.giturl %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>