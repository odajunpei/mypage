<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="mt-3 pb-3">アプリ詳細</h2>

      <table class="mt-5 table table-borderless">
        <tbody>
          <tr>
            <th rowspan="6" width="250px" class="align-middle">
              <%= attachment_image_tag @appulication, :image, size:"200x200", format: 'jpeg', fallback:"no_image.jpg", class: "enn" %>
            </th>
            <th>商品名</th>
            <td><%= @application.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td class= "text-break"><%= @application.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @application.url %></td>
          </tr>

        </tbody>
      </table>
      <div class="text-right"><%= link_to "編集する", edit_admin_product_path(@product), class:"btn btn-primary" %></div>
    </div>
  </div>
</div>